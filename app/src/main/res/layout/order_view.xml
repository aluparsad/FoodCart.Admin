<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageOrder"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/order_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <LinearLayout
                android:id="@+id/idLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingStart="4dp"
                    android:text="Order Id: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orderIdTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:padding="1dp"
                    android:text="1001fsd0fdsg425"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/foodnameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLL"
                android:gravity="center"
                android:padding="4dp"
                android:text="food name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantityTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodnameTV"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="QTY : 3"
                android:textColor="#0770CD"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnOrderDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_done_all_24"
            android:backgroundTint="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>